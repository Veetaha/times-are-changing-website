{
  "extends": "../tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "./src/app",
    "paths": {
        "@utils/*":   [ "./utils/*" ],
        "@common/*":  [ "../../../common/*" ],
        "@app/*":     [ "./*" ]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "esnext",
      "dom",
      "esnext.asynciterable"
    ]
  },
  "files": ["src/main.ts"]
}