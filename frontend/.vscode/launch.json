    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "skipFiles": [ 
                "timers.js",
                "async_hooks.js", 
                "inspector_async_hook.js",
                "tslib.js",
                "tslib.es6.js"
            ],
            "protocol": "inspector",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}"
        }, {
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost",
            "sourceMaps": true,
            // "pathMapping": {
            //     "/": "${workspaceFolder}"
            // }
            "webRoot": "${workspaceFolder}"
        }
    ]
}